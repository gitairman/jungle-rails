
<section class="user-registration">

  <header class="page-header">
    <h1>User &raquo; Login</h1>
  </header>

  <%= form_tag '/login' do %>

    <pre>Email:     <%= text_field_tag :email %></pre>
    <pre>Password:  <%= password_field_tag :password %></pre>
    <%= submit_tag "Submit" %>

  <% end %>

</section>