<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>
  <% if enhanced_cart.length > 0 %>
    <%= render 'details' %>
  <% else %>
    <%= link_to root_path do %>
    <div class="alert alert-danger" role="alert">
      Cart is empty!  Please click here and add something(s).
    </div>
    <% end %>

  <% end %>

</section>
