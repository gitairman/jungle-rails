<table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each_with_index do |item, i| %>
          <%= render 'line_item', product: item, quantity: @line_items[i][:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
        <tr>
          <th colspan="1">
            EMAIL:
          </th>
          <th colspan="4">
            <%= @order.email %>
          </th>
        </tr>
      </tfoot>
    </table>